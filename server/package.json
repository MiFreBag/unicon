{
  "name": "universal-protocol-backend",
  "version": "1.0.0",
  "description": "Universal Protocol Test Client Backend Server",
  "main": "universal-server.js",
  "scripts": {
    "start": "node universal-server.js",
    "dev": "cross-env FEATURE_AUTH=1 AUTH_ENFORCE=0 ENABLE_CSP=0 PORT=3001 WS_PORT=8080 nodemon universal-server.js",
    "pretest": "node -e \"require('fs').mkdirSync('./.tmp/jest',{recursive:true});require('fs').mkdirSync('./.tmp/npm-cache',{recursive:true})\"",
    "test": "cross-env NODE_ENV=test NPM_CONFIG_CACHE=./.tmp/npm-cache TMP=./.tmp/jest TEMP=./.tmp/jest PORT=3101 WS_PORT=8180 jest --runInBand --config jest.config.js --no-cache",
    "setup": "npm install && node setup.js",
    "build:client": "npm --prefix ../client run build",
    "prepare:client": "node scripts/prepare-client.js",
    "serve:prod": "cross-env ENABLE_CSP=1 FEATURE_AUTH=1 NODE_ENV=production node universal-server.js",
    "prod": "npm run build:client && npm run prepare:client && npm run serve:prod"
  },
  "keywords": [
    "opcua",
    "rest",
    "websocket",
    "grpc",
    "sql",
    "api-testing",
    "protocol-client",
    "industrial",
    "automation"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@grpc/grpc-js": "^1.9.7",
    "@grpc/proto-loader": "^0.7.10",
    "@kubernetes/client-node": "^0.21.0",
    "axios": "^1.6.0",
    "basic-ftp": "5.1.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "http-proxy-middleware": "^3.0.2",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "lowdb": "^1.0.0",
    "mqtt": "^5.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.3",
    "node-opcua": "^2.118.0",
    "node-red": "^3.1.0",
    "node-red-contrib-opcua": "*",
    "node-red-dashboard": "*",
    "pg": "^8.11.3",
    "sqlite3": "^5.1.6",
    "ssh2": "^1.15.0",
    "unicon-workspace": "file:..",
    "uuid": "^9.0.1",
    "busboy": "^1.6.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^7.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8",
    "utf-8-validate": "^6.0.3"
  }
}
